<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.codepath.apps.twitcher.activities.ProfileActivity"
    android:background="@color/mainBackground"
    android:layout_marginTop="16dp"
    >


    <!--<RelativeLayout-->
        <!--android:id="@+id/rlHeader"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginBottom="10dp"-->
        <!-->-->

        <ImageView
            android:layout_width="@dimen/avatar"
            android:layout_height="@dimen/avatar"
            android:id="@+id/ivProfilePicture"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:id="@+id/tvProfileName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivProfilePicture"
            android:layout_toEndOf="@+id/ivProfilePicture"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handle"
            android:id="@+id/tvProfileHandle"
            android:layout_below="@+id/tvProfileName"
            android:layout_toRightOf="@+id/ivProfilePicture"
            android:layout_toEndOf="@+id/ivProfilePicture"
            android:layout_marginLeft="10dp"
            />

    <!--</RelativeLayout>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250"
        android:id="@+id/tvFollowing"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_toRightOf="@+id/ivProfilePicture"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:id="@+id/tvFollowingTitle"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_toRightOf="@+id/tvFollowing"
        android:layout_toEndOf="@+id/tvFollowing"
        android:layout_alignBaseline="@+id/tvFollowing"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:id="@+id/tvFollowers"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_toRightOf="@+id/tvFollowingTitle"
        android:layout_toEndOf="@+id/tvFollowingTitle"
        android:layout_alignBaseline="@+id/tvFollowingTitle"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:id="@+id/tvFollowersTitle"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_toRightOf="@+id/tvFollowers"
        android:layout_toEndOf="@+id/tvFollowers"
        android:layout_alignBaseline="@+id/tvFollowers"
        android:layout_marginLeft="5dp"
        />

    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tvFollowersTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"

        />

    <FrameLayout
        android:id="@+id/flUserTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/vSeparator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        >

    </FrameLayout>

</RelativeLayout>
